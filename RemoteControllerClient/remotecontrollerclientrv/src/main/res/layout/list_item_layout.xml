<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/list_item_del"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_del" />

    <Button
        android:id="@+id/list_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:text="@string/list_btn_del"/>

    <Button
        android:id="@+id/list_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintRight_toLeftOf="@id/list_item_del"
        android:textAllCaps="false"
        android:text="@string/list_btn_edit"/>

</android.support.constraint.ConstraintLayout>